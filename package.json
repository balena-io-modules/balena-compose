{
  "name": "@balena/compose",
  "version": "0.1.0",
  "description": "Complete toolkit to build docker-compose.yml files and optionally deploy them to balenaCloud",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "CHANGELOG.md",
    "README.md"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "npm run lint:lib && npm run lint:tests && tsc --noEmit",
    "lint:lib": "balena-lint --typescript lib/ typings/",
    "lint:tests": "balena-lint --typescript --tests test/",
    "build": "npm run clean && tsc --project ./",
    "test": "npm run lint && ts-mocha --project ./tsconfig.test.json test/**/*.spec.ts",
    "prettify": "balena-lint --typescript --fix lib/ test/",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/balena-io-modules/balena-compose.git"
  },
  "author": "Balena Inc. <hello@balena.io>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/balena-io-modules/balena-compose/issues"
  },
  "homepage": "https://github.com/balena-io-modules/balena-compose#readme",
  "devDependencies": {
    "@balena/lint": "^6.1.1",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "mocha": "^9.2.2",
    "rimraf": "^3.0.2",
    "ts-mocha": "^9.0.2",
    "typescript": "^4.2.4"
  },
  "dependencies": {
  }
}
