{
  "name": "@balena/compose",
  "version": "0.1.0",
  "description": "Complete toolkit to build docker-compose.yml files and optionally deploy them to balenaCloud",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "CHANGELOG.md",
    "README.md"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "npm run lint:lib && npm run lint:tests && tsc --noEmit",
    "lint:lib": "balena-lint --typescript lib/ typings/",
    "lint:tests": "balena-lint --typescript --tests test/",
    "copy": "npm run copy:secrets",
    "copy:secrets": "ncp lib/multibuild/build-secrets dist/multibuild/build-secrets --filter='build-secrets($|.Dockerfile.*)'",
    "build": "npm run clean && tsc --project ./ && npm run copy",
    "test": "npm run lint && ts-mocha --project ./tsconfig.test.json",
    "prettify": "balena-lint --typescript --fix lib/ test/",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/balena-io-modules/balena-compose.git"
  },
  "author": "Balena Inc. <hello@balena.io>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/balena-io-modules/balena-compose/issues"
  },
  "homepage": "https://github.com/balena-io-modules/balena-compose#readme",
  "devDependencies": {
    "@balena/lint": "^6.1.1",
    "@types/bluebird": "^3.5.32",
    "@types/chai-as-promised": "^7.1.3",
    "@types/docker-modem": "^3.0.1",
    "@types/dockerode": "^3.3.8",
    "@types/js-yaml": "^4.0.1",
    "@types/lodash": "^4.14.181",
    "@types/mocha": "^9.1.0",
    "@types/mz": "^2.7.4",
    "@types/semver": "^7.3.5",
    "@types/tar-stream": "^2.2.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "mocha": "^9.2.2",
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2",
    "ts-mocha": "^9.0.2",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@balena/compose-parse": "^3.1.0",
    "ajv": "^6.12.3",
    "bluebird": "^3.7.2",
    "docker-modem": "^3.0.3",
    "docker-progress": "^5.1.0",
    "dockerfile-ast": "^0.2.1",
    "dockerfile-template": "^0.2.1",
    "dockerode": "^3.3.1",
    "fp-ts": "^2.8.1",
    "io-ts": "^2.2.9",
    "io-ts-reporters": "^1.2.2",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.19",
    "mz": "^2.7.0",
    "resin-bundle-resolve": "^4.3.0",
    "resin-docker-build": "^1.1.6",
    "semver": "^7.3.5",
    "tar-stream": "^2.1.3",
    "tar-utils": "^2.1.0",
    "typed-error": "^3.2.1"
  }
}
